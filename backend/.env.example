# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/earth-intelligence

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (to be configured in Phase 3)
# Choose email service: 'sendgrid' or 'smtp'
EMAIL_SERVICE=sendgrid

# SendGrid Configuration (if using SendGrid)
EMAIL_API_KEY=your-sendgrid-api-key-here

# SMTP Configuration (if using SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender Configuration
EMAIL_FROM=noreply@earthintelligence.com
EMAIL_FROM_NAME=Earth Observation Platform

# Team Email Addresses
SALES_EMAIL=sales@earthintelligence.com
SUPPORT_EMAIL=support@earthintelligence.com

# Email Queue Configuration (Optional - requires Redis)
USE_EMAIL_QUEUE=false
REDIS_URL=redis://127.0.0.1:6379

# File Upload Configuration (to be configured in Phase 3)
UPLOAD_SERVICE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=earth-intelligence-uploads
